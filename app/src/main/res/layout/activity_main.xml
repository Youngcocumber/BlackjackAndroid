<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/dealer_card_1"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/dealer_card_2"
        app:layout_constraintTop_toTopOf="@+id/dealer_card_2"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/dealer_card_2"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/dealer_card_3"
        app:layout_constraintTop_toTopOf="@+id/dealer_card_3"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/dealer_card_3"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/dealer_card_5"
        app:layout_constraintTop_toTopOf="@+id/dealer_card_5"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/dealer_card_4"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/dealer_card_5"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/dealer_card_4"
        app:layout_constraintTop_toTopOf="@+id/dealer_card_4"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/player_card_1"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toEndOf="@+id/player_card_3"
        app:layout_constraintTop_toTopOf="@+id/player_card_3"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/player_card_2"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/player_card_4"
        app:layout_constraintTop_toTopOf="@+id/player_card_4"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/player_card_3"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/player_card_2"
        app:layout_constraintTop_toTopOf="@+id/player_card_2"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/player_card_4"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/player_card_5"
        app:layout_constraintTop_toTopOf="@+id/player_card_5"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:id="@+id/player_card_5"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="364dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        android:text="Результаты"
        android:onClick="Results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="24dp"
        android:text="Взять карту"
        android:onClick="TakeCard"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_card_2" />

</androidx.constraintlayout.widget.ConstraintLayout>